@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>login</title>

    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/Scripts/bootstrap")
</head>
<body class="metro">
    <div class="tile-area tile-area-darkBlue">
        <h1 class="tile-area-title fg-white">Bem Vindo!</h1>
        <div class="user-id">
            <div class="user-id-image">
                <span class="icon-user no-display1"></span>
                <img src="images/Battlefield_4_Icon.png" class="no-display">
            </div>
            <div class="user-id-name">
                <span class="first-name">Daivid</span>
                <span class="last-name">Paulo</span>
            </div>
        </div>

        <div class="tile-group six">

            <a class="tile double bg-lightBlue live" data-role="live-tile" data-effect="slideUp">
                <div class="tile-content email">
                    <div class="email-image">
                        <img src="/images/css-logo.png">
                    </div>
                    <div class="email-data">
                        <span class="email-data-title">Atualização Portal </span>
                        <span class="email-data-subtitle">Cooperado</span>
                        <span class="email-data-text">Nesta proxima sexta...</span>
                    </div>
                </div>
                <div class="tile-content email">
                    <div class="email-image">
                        <img src="/images/access.png">
                    </div>
                    <div class="email-data">
                        <span class="email-data-title">Manutenção &amp; Limpeza da Base</span>
                        <span class="email-data-subtitle">Limpeza periodica</span>
                        <span class="email-data-text">Estamos agendando</span>
                    </div>
                </div>

            </a>
            <a class="tile double bg-dark" style="overflow: visible">
                <div class="tile-content" style="overflow: visible">
                    <div class="input-control text span2 place-left margin10" style="margin-left: 10px" data-role="datepicker">
                        <input type="text" name="sel_date">
                        <button class="btn-date"></button>
                    </div>
                    <div class="text-right padding10 ntp">
                        <h1 class="fg-white no-margin">10</h1>
                        <p class="fg-white">Segunda</p>
                    </div>
                </div>
                <div class="brand">
                    <div class="label"><h3 class="no-margin fg-white"><span class="icon-calendar"></span></h3></div>
                </div>
            </a>
        </div><!--  fim do grupo -->

        <div class="tile-group">
            <div class="tile-group-title">Acesso rápido</div>
            <a class="tile half bg-darkBlue">
                <div class="tile-content icon">
                    <img src="/images/word.png">
                </div>
            </a>
            <a class="tile half bg-darkGreen">
                <div class="tile-content icon">
                    <img src="/images/excel.png">
                </div>
            </a>
            <a class="tile half bg-darkPink">
                <div class="tile-content icon">
                    <img src="/images/onenote.png">
                </div>
            </a>

        </div><!--  fim do grupo -->

    </div>
</body>
</html>